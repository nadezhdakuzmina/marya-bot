{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@constants": ["./src/constants.ts"],
      "@types": ["./src/types.ts"],
      "@modules/*": ["./src/modules/*"],
      "@resources/*": ["./src/resources/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
